{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ai-learning-hub/types": ["backend/shared/types/src/index.ts"],
      "@ai-learning-hub/logging": ["backend/shared/logging/src/index.ts"],
      "@ai-learning-hub/validation": ["backend/shared/validation/src/index.ts"],
      "@ai-learning-hub/db": ["backend/shared/db/src/index.ts"],
      "@ai-learning-hub/middleware": ["backend/shared/middleware/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "cdk.out", "build"]
}
